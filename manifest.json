{
  "manifest_version": 3,
  "name": "youtube-controller",
  "version": "0.0.2",
  "description": "youtube fullscreen controller",
  "background": {
    "service_worker": "dist/bg.js"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["dist/index.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon-128.png", "icon-34.png"],
      "matches": ["*://*/*"]
    }
  ]
}
